<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Brewery</th>
        <th>Inventory</th>
        <th>Average Rating</th>
    </tr>
    </thead>

    <tbody>
    <% @beers.each do |beer| %>
        <tr>
            <td><%= beer.name %></td>
            <td><%= beer.brewery.name %></td>
            <td><%= beer.inventory %></td>
            <td><%= beer.average_rating || 'Not Rated' %></td>
        </tr>
    <% end %>
    </tbody>
</table>