<div class='panel panel-success'>
    <div class='panel-heading' style="overflow:auto">
        <h3 class='panel-title pull-left'><%= review.user.name %></h3> <span class='pull-right'>Rating <span class='label label-default'><%= review.rating %></span></span></h3>
    </div>
    <% if ((review.comment and review.comment.length > 0) or current_user == review.user) %>
        <div class='panel-body'>
            <%= review.comment %>
            <% if current_user == review.user %>
                <%= link_to review, method: :delete,
                            data: {confirm: 'Are you sure?'},
                            class: 'btn btn-danger btn-xs pull-right' do %>
                    <span class='glyphicon glyphicon-remove'></span>
                <% end %>
            <% end %>
        </div>
    <% end %>
</div>
