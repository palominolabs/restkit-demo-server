<div class='well'>
    <h3 class='review-form-title'><strong>Create Review</strong></h3>
    <%= form_for(@review, html: {class: 'form-horizontal'}) do |f| %>
        <% if @review.errors.any? %>
            <div class='panel panel-danger'>
                <div class='panel-heading'>
                    <h4 class='panel-title'><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved</h4>
                </div>
                <div class='panel-body'>
                    <ul>
                        <% @review.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        <% end %>

        <div class="form-group">
            <%= f.label :rating, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= f.text_field :rating, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :comment, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= f.text_area :comment, class: 'form-control' %>
            </div>
        </div>
        <%= f.hidden_field :beer_id, value: @beer.id %>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: 'btn btn-default'%>
            </div>
        </div>
    <% end %>
</div>
