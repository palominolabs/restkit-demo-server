    <%= form_for(@review, html: {class: 'form-horizontal'}) do |f| %>
        <% if @review.errors.any? %>
            <div class='panel panel-danger'>
                <div class='panel-heading'>
                    <h4 class='panel-title'><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved</h4>
                </div>
                <div class='panel-body'>
                    <ul>
                        <% @review.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        <% end %>

        <div class="form-group">
            <%= f.label :rating, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= f.number_field :rating, class: 'form-control', placeholder: 'On a scale of 1 to 5', max: '5', min: '0' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :comment, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= f.text_area :comment, class: 'form-control' %>
            </div>
        </div>
        <%= f.hidden_field :beer_id, value: @beer.id %>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: 'btn btn-default', value: 'Add Review' %>
            </div>
        </div>
    <% end %>
