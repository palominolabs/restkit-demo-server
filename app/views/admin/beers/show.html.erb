<div class='beer-title-row'>
    <h1 class='beer-title'>
        <%= @beer.name %> 
        <small>by <%= link_to @beer.brewery.name, @beer.brewery %></small>
        <% if current_user %>
            <%= link_to edit_beer_path(@beer), class: 'btn btn-default btn-sm' do %>
                <span class='glyphicon glyphicon-pencil'></span> Edit
            <% end %>
        <% end %>
    </h1>
</div>

<div class='well'>
    <div class="row">
        <div class="col-sm-6">
            <h4>
                Inventory Count <span class="label label-default"><%= @beer.inventory %></span>
            </h4>
        </div>
        <div class="col-sm-6" style="border-left: 1px solid #ccc;">
            <h4>Rating <span class="label label-default"><%= @beer.average_rating || 'Not Rated' %></span></h4>
        </div>
    </div>
    <% if current_user && @beer.inventory != 0 %>
        <div class="row text-center" style="padding-top:15px;border-top:1px solid #ccc;">
            <%= link_to 'Open a Bottle', :open_beer, class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>
<div class="row">
    <div class='col-sm-12'>
        <% if @beer.reviews.length > 0 %>
            <h4><strong>Reviews</strong></h4>
            <%= render @beer.reviews %>
        <% end %>

        <% if current_user %>
            <%= render 'reviews/form' %>
        <% end %>
    </div>
</div>
