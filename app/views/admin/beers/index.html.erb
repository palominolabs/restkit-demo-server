<div class="row">
    <div class="col-xs-12">
        <h1>
            <%= (!@in_stock ? "All" : "") %> <%= "#{@brewery.name} " if @brewery %> Beers <%= (@in_stock ? "in stock" : "") %>

            <%
               if @brewery
                 all_path = brewery_beers_path(@brewery)
                 in_stock_path = brewery_beers_path(@brewery, in_stock: '1')
               else
                 all_path = beers_path
                 in_stock_path = beers_path(in_stock: '1')
               end
            %>

            <% if @in_stock %>
                <%= link_to 'View all beers', all_path, class: 'btn btn-default btn-xs' %>
            <% else %>
                <%= link_to 'View only beers in stock', in_stock_path, class: 'btn btn-default btn-xs' %>
            <% end %>

            <% if current_user %>
                <%= link_to '+ Add Beer', new_beer_path, class: 'btn btn-primary pull-right' %>
            <% end %>
        </h1>

        <%= render 'list' %>

        <br>
    </div>
</div>

