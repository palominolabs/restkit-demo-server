<div class="row">
    <div class="col-xs-12">
        <h1>
            <%= "#{@brewery.name} " if @brewery %>
            Beers
            <% if @in_stock %>
                <small> in the office</small>
            <% end %>
        </h1>

        <%= render 'list' %>

        <%
           if @brewery
             all_path = brewery_beers_path(@brewery)
             in_stock_path = brewery_beers_path(@brewery, in_stock: '1')
           else
             all_path = beers_path
             in_stock_path = beers_path(in_stock: '1')
           end
        %>

        <% if @in_stock %>
            <%= link_to 'See All Beers', all_path, class: 'btn btn-primary' %>
        <% else %>
            <%= link_to 'See Office Inventory', in_stock_path, class: 'btn btn-primary' %>
        <% end %>

        <% if current_user %>
            <%= link_to '+ Add Beer', new_beer_path, class: 'btn btn-primary' %>
        <% end %>
        <br>
    </div>
</div>

