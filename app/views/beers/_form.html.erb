<div class='new-form'>
    <%= form_for(@beer, html: {class: 'form-horizontal'}) do |f| %>
        <% if @beer.errors.any? %>
            <div class='panel panel-danger'>
                <div class='panel-heading'>
                    <h4 class='panel-title'><%= pluralize(@beer.errors.count, 'error') %> prohibited this beer from being saved</h4>
                </div>
                <div class='panel-body'>
                    <ul>
                        <% @beer.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        <% end %>

        <div class='form-group'>
            <%= f.label :name, class: 'col-sm-3 control-label' %>
            <div class='col-sm-8'>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
        </div>
        <div class='form-group'>
            <%= f.label :brewery, class: 'col-sm-3 control-label' %>
            <div class='col-sm-8'>
                <% if @breweries.length > 0 %>
                    <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name, (@beer.brewery) ? @beer.brewery.id : nil), class: 'form-control' %> or
                <% end %>
                <p class="form-control-static">
                    <%= link_to 'Add a new brewery', new_brewery_path %>
                </p>
            </div>
        </div>
        <div class='form-group'>
            <%= f.label :inventory_count, "Inventory Count", class: 'col-sm-3 control-label' %>
            <div class='col-sm-8'>
                <%= f.number_field :inventory, class: 'form-control', value: (@beer.inventory || 0) %>
            </div>
        </div>
        <div class='form-group'>
            <div class='col-sm-offset-3 col-sm-8'>
                <%= f.submit class: 'btn btn-primary'%>
            </div>
        </div>
    <% end %>
</div>