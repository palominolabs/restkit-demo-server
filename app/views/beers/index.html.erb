<div class="row">
    <div class="col-xs-12">
        <h1>beers</h1>

        <table class='table'>
            <thead>
            <tr>
                <th>Name</th>
                <th>Brewery</th>
                <th>Avg. Rating</th>
                <% if current_user %>
                    <th></th>
                <% end %>
            </tr>
            </thead>

            <tbody>
            <% @beers.each do |beer| %>
                <tr>
                    <td><%= link_to beer.name, beer %></td>
                    <td><%= beer.brewery %></td>
                    <td><%= beer.average_rating || 'Not Rated' %></td>
                    <% if current_user %>
                        <td>
                            <%= link_to 'Edit', edit_beer_path(beer) %>
                            <%= link_to 'Delete', beer, method: :delete, data: {confirm: 'Are you sure?'} %>
                        </td>
                    <% end %>
                </tr>
            <% end %>
            </tbody>
        </table>

        <br>

        <% if current_user %>
            <%= link_to 'New Beer', new_beer_path, class: 'btn btn-default' %>
        <% end %>
    </div>
</div>

