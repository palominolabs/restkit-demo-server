<div class="row">
    <div class="col-xs-12">
        <h1>Beers</h1>

        <%
           if @brewery
             all_path = brewery_beers_path(@brewery)
             in_stock_path = brewery_beers_path(@brewery, in_stock: '1')
           else
             all_path = beers_path
             in_stock_path = beers_path(in_stock: '1')
           end
        %>

        <div class="well well-small">
            
        <% if @in_stock %>
            Viewing only beers in stock &middot; <%= link_to 'See all beers', all_path %>
        <% else %>
            Viewing all beers &middot; <%= link_to 'See only what\'s in stock', in_stock_path %>
        <% end %>

        </div>

        <%= render 'list' %>

        <% if current_user %>
            <%= link_to '+ Add Beer', new_beer_path, class: 'btn btn-primary' %>
        <% end %>
        <br>
    </div>
</div>

